<Page x:Class="Apteka.Views.PageRegistr"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Apteka.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageRegistr">

    <Grid Background="#FFC5C5C5">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Логин" Height="47" Width="77" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <TextBox x:Name="txtBoxLogin" HorizontalAlignment="Center" VerticalAlignment="Top" Width="172" Height="34"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Пароль" Height="48" Width="77" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <PasswordBox x:Name="passBoxPassword" Width="172" Height="34" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </StackPanel>
            <Button x:Name="Vxod" Content="Войти" Click="Vxod_Click" Background="#528a8e"/>
        </StackPanel>
    </Grid>
</Page>
