<Page x:Class="Apteka.Views.PageGlavnaya"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Apteka.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageGlavnaya">

    <Grid Background="#FFC5C5C5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="627*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>

            <RowDefinition Height="318*"/>

        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical"  HorizontalAlignment="Center" Width="160" Margin="0,10,0,0" Grid.RowSpan="1">
            <Button Content="Поставщики"  FontSize="20" x:Name="Postav" Click="Postav_Click"   Background="#528a8e" Height="110"/>
            <Button Content="Пользователи" FontSize="20" x:Name="Polzov" Click="Polzov_Click"   Background="#528a8e" Height="110"/>
            <Button Content="Товары" FontSize="20" x:Name="Tovar" Click="Tovar_Click" Background="#528a8e" Height="110"/>
            <Button Content="Продажи" FontSize="20" x:Name="Prodagi" Click="Prodagi_Click"   Background="#528a8e" Height="110"/>
        </StackPanel>
        <Frame x:Name="SecondFrame" Grid.Column="2" Margin="4,10,-3,0" Grid.ColumnSpan="2"/>
    </Grid>
</Page>
